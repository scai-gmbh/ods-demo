root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
indent_size = unset
max_line_length = off

[*.{json,yaml,yaml.template,yml,yml.template}]
indent_size = 2
max_line_length = off

[*.tsv]
indent_style = tab
insert_final_newline = false
trim_trailing_whitespace = false
max_line_length = off
